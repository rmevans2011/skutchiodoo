<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id = "view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.inherited</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='variants']" position="before">
                <page name="product_description_details" string="Description Builder">
                    <group>
                        <group string="Box Dimensions (LxWxH)">
                            <div class="o_row">
                                    L: <field name="box_length" class="oe_inline" placeholder="L"/> <strong>x</strong>
                                    W: <field name="box_width" class="oe_inline" placeholder="W"/> <strong>x</strong>
                                    H: <field name="box_height" class="oe_inline" placeholder="H"/>
                            </div>
                            <div class="o_row">
                                <field name="product_weight" />
                            </div>
                        </group>
                        <group>
                            <p class="oe_grey">
                                Product details
                            </p>
                        </group>
                    </group>
                    <p class="oe_grey">
                        Product details to build description
                    </p>
                </page>
            </xpath>
        </field>
    </record>

</odoo>