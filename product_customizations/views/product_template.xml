<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id = "view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.inherited</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <field name="invoice_policy" position="after">
                <group>
                    <div class="o_row">
                        <field name="box_length" class="oe_inline" placeholder="L"/> X
                        <field name="box_width" class="oe_inline" placeholder="W"/> X
                        <field name="box_height" class="oe_inline" placeholder="H"/>
                    </div>
                </group>
            </field>
        </field>
    </record>

</odoo>